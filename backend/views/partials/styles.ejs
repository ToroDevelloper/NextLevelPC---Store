/* Estilos Globales */
.product-image {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 8px;
    border: 2px solid #dee2e6;
    transition: transform 0.3s ease;
}
.product-image:hover {
    transform: scale(1.1);
}
.image-placeholder {
    width: 60px;
    height: 60px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: white;
}
.status-badge {
    font-size: 0.75em;
}
.action-buttons {
    min-width: 100px;
}
.table-hover tbody tr:hover {
    background-color: rgba(0, 123, 255, 0.05);
}

/* Estilos para preview de imágenes */
.preview-image {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 8px;
    margin: 5px;
    border: 2px solid #dee2e6;
}

.btn-icon-sq {
    /* Define la misma altura y anchura para que sea un cuadrado */
    width: 34px !important; 
    height: 34px !important;
    
    /* Centra el contenido (el icono) */
    display: flex;
    justify-content: center;
    align-items: center;
    
    /* Asegúrate de que no haya padding extra si el de Bootstrap está causando diferencia */
    padding: 0; 
}

/* Opcional: Asegurar que el icono dentro del botón también se centre correctamente */
.btn-icon-sq i {
    line-height: 1; /* Esto ayuda a centrar verticalmente si el icono tiene un tamaño fijo */
}

