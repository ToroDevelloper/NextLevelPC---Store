<%
    title = 'Gestión de Servicios';
    currentPage = 'servicios';
    scripts = `
        document.addEventListener('DOMContentLoaded', function() {
            const typeFilter = document.getElementById('typeFilter');
            const filterButton = document.getElementById('filterButton');
            
            function applyFilter() {
                const type = typeFilter ? typeFilter.value : '';

                let url = '/servicios'; 
                let params = [];

                if (type) {
                    params.push('tipo=' + type);
                }

                if (params.length > 0) {
                    url += '?' + params.join('&');
                }

                window.location.href = url;
            }

            if (filterButton) {
                filterButton.addEventListener('click', applyFilter);
            }
            
            if (typeFilter) {
                typeFilter.addEventListener('change', applyFilter);
            }
        });
    `;
%>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 pb-3 mb-4 border-bottom">
    <div>
        <h1 class="h3 mb-1">
            <i class="fas fa-tools me-2"></i>
            Gestión de Servicios
        </h1>
        <p class="text-muted mb-0">Administra los servicios técnicos ofrecidos</p>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/servicios/create" class="btn btn-success">
            <i class="fas fa-plus-circle me-2"></i>
            Nuevo Servicio
        </a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-xl-4 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="fs-4 fw-bold"><%= servicios.length %></div>
                        <div>Total Servicios</div>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-tools fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6">
        <div class="card bg-info text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="fs-4 fw-bold">
                            <%= servicios.filter(s => s.tipo === 'basico').length %>
                        </div>
                        <div>Servicios Básicos</div>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-wrench fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-6">
        <div class="card bg-warning text-dark mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="fs-4 fw-bold">
                            <%= servicios.filter(s => s.tipo === 'avanzado').length %>
                        </div>
                        <div>Servicios Avanzados</div>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-microchip fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white border-bottom-0">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>
                Lista de Servicios
            </h5>

            <div class="d-flex align-items-center">
                <select class="form-select form-select-sm me-2" id="typeFilter">
                    <option value="">Todos los tipos</option>
                    <option value="basico" <%= tipo_seleccionado === 'basico' ? 'selected' : '' %>>Básico</option>
                    <option value="avanzado" <%= tipo_seleccionado === 'avanzado' ? 'selected' : '' %>>Avanzado</option>
                </select>

                <button class="btn btn-primary btn-sm" id="filterButton">Filtrar</button>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <% if (servicios && servicios.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th width="80">Imagen</th>
                            <th width="60">ID</th>
                            <th>Nombre</th>
                            <th width="120">Tipo</th>
                            <th width="120">Precio</th>
                            <th>Descripción</th>
                            <th width="120" class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% servicios.forEach(servicio => { %>
                            <tr>
                                <td>
                                    <% 
                                    const FALLBACK_IMAGE_URL = 'https://png.pngtree.com/png-vector/20190820/ourmid/pngtree-no-image-vector-illustration-isolated-png-image_1694547.jpg';
                                    %>

                                    <% if (servicio.imagen_url) { %>
                                        <img src="<%= servicio.imagen_url %>"
                                        alt="<%= servicio.nombre %>"
                                        class="rounded"
                                        style="width: 50px; height: 50px; object-fit: cover;"
                                        onerror="this.onerror=null; this.src='<%= FALLBACK_IMAGE_URL %>';"
                                        >
                                    <% } else { %>
                                    <img src="<%= FALLBACK_IMAGE_URL %>"
                                        alt="Sin imagen"
                                        class="rounded"
                                        style="width: 50px; height: 50px; object-fit: cover;"
                                    >
                                    <% } %>
                                </td>
                                <td>
                                    <span class="badge bg-dark">#<%= servicio.id %></span>
                                </td>
                                <td>
                                    <div class="fw-bold"><%= servicio.nombre %></div>
                                </td>
                                <td>
                                    <% if (servicio.tipo === 'basico') { %>
                                        <span class="badge bg-info text-dark">Básico</span>
                                    <% } else { %>
                                        <span class="badge bg-warning text-dark">Avanzado</span>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="fw-bold text-success">
                                        $<%= parseFloat(servicio.precio).toLocaleString('es-ES', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                    </span>
                                </td>
                                <td>
                                    <small class="text-muted text-truncate d-inline-block" style="max-width: 250px;">
                                        <%= servicio.descripcion %>
                                    </small>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a href="/servicios/edit/<%= servicio.id %>" 
                                           class="btn btn-outline-primary" 
                                           title="Editar servicio"
                                           data-bs-toggle="tooltip">
                                            <i class="fas fa-edit"></i>
                                        </a>
            
                                        <form action="/servicios/delete/<%= servicio.id %>" 
                                              method="POST" 
                                              class="d-inline"
                                              onsubmit="return confirm('¿Estás seguro de eliminar el servicio \'<%= servicio.nombre %>\'?')">
                                            <button type="submit" 
                                                    class="btn btn-outline-danger" 
                                                    title="Eliminar servicio"
                                                    data-bs-toggle="tooltip">
                                                <i class="fas fa-trash"></i> 
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-tools fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No hay servicios registrados</h4>
                <p class="text-muted mb-4">Comienza agregando tu primer servicio técnico</p>
                <a href="/servicios/create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>
                    Crear Primer Servicio
                </a>
            </div>
        <% } %>
    </div>
    <% if (servicios && servicios.length > 0) { %>
        <div class="card-footer bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    Mostrando <strong><%= servicios.length %></strong> servicios
                </small>
                <small class="text-muted">
                    Actualizado: <%= new Date().toLocaleString('es-ES') %>
                </small>
            </div>
        </div>
    <% } %>
</div>