<%
    title = 'Gestión de Productos';
    currentPage = 'productos';
    scripts = `
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const categoryFilter = document.getElementById('categoryFilter');
            const filterButton = document.getElementById('filterButton');
            
            function applyFilter() {
                const searchText = searchInput ? searchInput.value.trim() : '';
                const categoryId = categoryFilter ? categoryFilter.value : '0';

                let url = '/productos'; 
                let params = [];

                if (searchText) {
                    params.push('busqueda=' + encodeURIComponent(searchText));
                }

                if (categoryId && categoryId !== '0') {
                    params.push('categoria_id=' + categoryId);
                }

                if (params.length > 0) {
                    url += '?' + params.join('&');
                }

                console.log("DEBUG: URL final para filtrar:", url);
                window.location.href = url;
            }

            if (filterButton) {
                filterButton.addEventListener('click', applyFilter);
            }

            if (searchInput) {
                searchInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        applyFilter();
                    }
                });
            }
            
            if (categoryFilter) {
                categoryFilter.addEventListener('change', applyFilter);
            }
        });
    `;
%>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 pb-3 mb-4 border-bottom">
    <div>
        <h1 class="h3 mb-1">
            <i class="fas fa-boxes me-2"></i>
            Gestión de Productos
        </h1>
        <p class="text-muted mb-0">Administra tu inventario de productos</p>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/productos/create" class="btn btn-success">
            <i class="fas fa-plus-circle me-2"></i>
            Nuevo Producto
        </a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="fs-4 fw-bold"><%= productos.length %></div>
                        <div>Total Productos</div>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-box fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="fs-4 fw-bold">
                            <%= productos.filter(p => p.activo > 0).length %>
                        </div>
                        <div>Productos Activos</div>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-dark mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="fs-4 fw-bold">
                            <%= productos.filter(p => p.stock < 10).length %>
                        </div>
                        <div>Stock Bajo</div>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-exclamation-triangle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-info text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="fs-4 fw-bold">
                            $<%= (productos.reduce((sum, p) => sum + (parseFloat(p.precio_actual) * parseInt(p.stock)), 0) || 0).toLocaleString('es-ES', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                        </div>
                        <div>Valor Inventario</div>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-dollar-sign fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-white border-bottom-0">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>
                Lista de Productos
            </h5>

            <div class="d-flex align-items-center">
                <input type="text" 
                       class="form-control form-control-sm me-2" 
                       placeholder="Buscar producto..." 
                       id="searchInput" 
                       value="<%= busqueda %>">

                <select class="form-select form-select-sm me-2" id="categoryFilter">
                    <option value="0">Todas las categorías</option>
                    <% categorias.forEach(categoria => { %>
                       <option value="<%= categoria.id %>" 
    <%= (String(categoria.id) === String(categoria_seleccionada)) ? 'selected' : '' %>>
        <%= categoria.nombre %>
    </option>
                    <% }); %>
                </select>

                <button class="btn btn-primary btn-sm" id="filterButton">Filtrar</button>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <% if (productos && productos.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="productsTable">
                    <thead class="table-light">
                        <tr>
                            <th width="80">Imagen</th>
                            <th width="80">ID</th>
                            <th>Nombre</th>
                            <th width="120">Categoría</th>
                            <th width="120">Precio</th>
                            <th width="100">Stock</th>
                            <th width="100">Estado</th>
                            <th width="120" class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% productos.forEach(producto => { %>
                            <tr>
                            <td>
                                <% 
                                const FALLBACK_IMAGE_URL = 'https://png.pngtree.com/png-vector/20190820/ourmid/pngtree-no-image-vector-illustration-isolated-png-image_1694547.jpg';
                                %>

                                <% if (producto.imagen_principal) { %>
                                    <img src="<%= producto.imagen_principal %>"
                                    alt="<%= producto.nombre %>"
                                    class="product-image"
                                    onerror="this.onerror=null; this.src='<%= FALLBACK_IMAGE_URL %>';"
                                    >
                                <% } else { %>
                                <img src="<%= FALLBACK_IMAGE_URL %>"
                                    alt="Sin imagen"
                                    class="product-image"
                                >
                                <% } %>
                            </td>
                                <td>
                                    <span class="badge bg-dark">#<%= producto.id %></span>
                                </td>
                                <td>
                                    <div class="fw-bold"><%= producto.nombre %></div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">
                                        <%= producto.categoria_nombre || 'Categoría ' + producto.categoria_id %>
                                    </span>
                                </td>
                                <td>
                                    <span class="fw-bold text-success">
                                        $<%= parseFloat(producto.precio_actual).toLocaleString('es-ES', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                    </span>
                                </td>
                                <td>
                                    <% if (producto.stock < 10 && producto.stock > 0) { %>
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-exclamation-triangle me-1"></i>
                                            <%= producto.stock %>
                                        </span>
                                    <% } else if (producto.stock === 0) { %>
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times me-1"></i>
                                            <%= producto.stock %>
                                        </span>
                                    <% } else { %>
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>
                                            <%= producto.stock %>
                                        </span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (producto.activo > 0) { %>
                                        <span class="badge bg-success status-badge">
                                            <i class="fas fa-check me-1"></i>
                                            Activo
                                        </span>
                                    <% } else { %>
                                        <span class="badge bg-danger status-badge">
                                            <i class="fas fa-times me-1"></i>
                                            Inactivo
                                        </span>
                                    <% } %>
                                </td>
                                <td class="text-center action-buttons">
                                    <div class="btn-group btn-group-sm">
                                    <a href="/productos/edit/<%= producto.id %>" 
                                    class="btn btn-outline-primary btn-icon-sq" 
                                    title="Editar producto"
                                    data-bs-toggle="tooltip">
                                    <i class="fas fa-edit"></i>
                                    </a>
            
                                    <form action="/productos/delete/<%= producto.id %>" 
                                    method="POST" 
                                    class="d-inline"
                                    onsubmit="return confirm('¿Estás seguro de eliminar el producto \'<%= producto.nombre %>\'?')">
                                    <button type="submit" 
                                    class="btn btn-outline-danger btn-icon-sq" 
                                    title="Eliminar producto"
                                    data-bs-toggle="tooltip">
                
                                    <i class="fas fa-trash"></i> 
                
                                    </button>
                                    </form>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No hay productos registrados</h4>
                <p class="text-muted mb-4">Comienza agregando tu primer producto al inventario</p>
                <a href="/productos/create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>
                    Crear Primer Producto
                </a>
            </div>
        <% } %>
    </div>
    <% if (productos && productos.length > 0) { %>
        <div class="card-footer bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    Mostrando <strong><%= productos.length %></strong> productos
                </small>
                <small class="text-muted">
                    Actualizado: <%= new Date().toLocaleString('es-ES') %>
                </small>
            </div>
        </div>
    <% } %>
</div>