<%
    title = 'Gestión de Productos';
    currentPage = 'productos';
%>

<!-- Header -->
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 pb-3 mb-4 border-bottom">
    <div>
        <h1 class="h3 mb-1">
            <i class="fas fa-boxes me-2"></i>
            Gestión de Productos
        </h1>
        <p class="text-muted mb-0">Administra tu inventario de productos</p>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/productos/create" class="btn btn-success">
            <i class="fas fa-plus-circle me-2"></i>
            Nuevo Producto
        </a>
    </div>
</div>

<!-- Estadísticas Rápidas -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="fs-4 fw-bold"><%= productos.length %></div>
                        <div>Total Productos</div>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-box fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="fs-4 fw-bold">
                            <%= productos.filter(p => p.activo).length %>
                        </div>
                        <div>Productos Activos</div>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-dark mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="fs-4 fw-bold">
                            <%= productos.filter(p => p.stock < 10).length %>
                        </div>
                        <div>Stock Bajo</div>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-exclamation-triangle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-info text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="fs-4 fw-bold">
                            $<%= productos.reduce((sum, p) => sum + (p.precio_actual * p.stock), 0).toLocaleString() %>
                        </div>
                        <div>Valor Inventario</div>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-dollar-sign fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tabla de Productos -->
<div class="card shadow-sm">
    <div class="card-header bg-white border-bottom-0">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>
                Lista de Productos
            </h5>
            <div class="d-flex">
                <input type="text" class="form-control form-control-sm me-2" placeholder="Buscar producto..." id="searchInput">
                <button class="btn btn-outline-secondary btn-sm" onclick="exportToExcel()">
                    <i class="fas fa-download me-1"></i> Exportar
                </button>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <% if (productos && productos.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="productsTable">
                    <thead class="table-light">
                        <tr>
                            <th width="80">Imagen</th>
                            <th width="80">ID</th>
                            <th>Nombre</th>
                            <th width="120">Categoría</th>
                            <th width="120">Precio</th>
                            <th width="100">Stock</th>
                            <th width="100">Estado</th>
                            <th width="120" class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% productos.forEach(producto => { %>
                            <tr>
                                <td>
                                    <% if (producto.imagen_principal) { %>
                                        <img src="<%= producto.imagen_principal %>" 
                                             alt="<%= producto.nombre %>" 
                                             class="product-image"
                                             onerror="this.onerror=null; this.src='data:image/svg+xml;base64,'">
                                    <% } else { %>
                                        <div class="image-placeholder" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                            <%= producto.nombre.substring(0, 2).toUpperCase() %>
                                        </div>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="badge bg-dark">#<%= producto.id %></span>
                                </td>
                                <td>
                                    <div class="fw-bold"><%= producto.nombre %></div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">
                                        <%= producto.categoria_nombre || 'Categoría ' + producto.categoria_id %>
                                    </span>
                                </td>
                                <td>
                                    <span class="fw-bold text-success">
                                        $<%= parseFloat(producto.precio_actual).toLocaleString('es-ES', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                    </span>
                                </td>
                                <td>
                                    <% if (producto.stock < 10) { %>
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-exclamation-triangle me-1"></i>
                                            <%= producto.stock %>
                                        </span>
                                    <% } else if (producto.stock === 0) { %>
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times me-1"></i>
                                            <%= producto.stock %>
                                        </span>
                                    <% } else { %>
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>
                                            <%= producto.stock %>
                                        </span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (producto.activo) { %>
                                        <span class="badge bg-success status-badge">
                                            <i class="fas fa-check me-1"></i>
                                            Activo
                                        </span>
                                    <% } else { %>
                                        <span class="badge bg-danger status-badge">
                                            <i class="fas fa-times me-1"></i>
                                            Inactivo
                                        </span>
                                    <% } %>
                                </td>
                                <td class="text-center action-buttons">
                                    <div class="btn-group btn-group-sm">
                                        <a href="/productos/edit/<%= producto.id %>" 
                                           class="btn btn-outline-primary" 
                                           title="Editar producto"
                                           data-bs-toggle="tooltip">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/api/productos/<%= producto.id %>" 
                                           class="btn btn-outline-info" 
                                           title="Ver detalles"
                                           data-bs-toggle="tooltip"
                                           target="_blank">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form action="/productos/delete/<%= producto.id %>" 
                                              method="POST" 
                                              class="d-inline"
                                              onsubmit="return confirm('¿Estás seguro de eliminar el producto \\'<%= producto.nombre %>\\'?')">
                                            <button type="submit" 
                                                    class="btn btn-outline-danger" 
                                                    title="Eliminar producto"
                                                    data-bs-toggle="tooltip">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No hay productos registrados</h4>
                <p class="text-muted mb-4">Comienza agregando tu primer producto al inventario</p>
                <a href="/productos/create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>
                    Crear Primer Producto
                </a>
            </div>
        <% } %>
    </div>
    <% if (productos && productos.length > 0) { %>
        <div class="card-footer bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    Mostrando <strong><%= productos.length %></strong> productos
                </small>
                <small class="text-muted">
                    Actualizado: <%= new Date().toLocaleString('es-ES') %>
                </small>
            </div>
        </div>
    <% } %>
</div>

<!-- Scripts específicos para esta vista -->
<script>
    // Buscar productos
    document.getElementById('searchInput').addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        const rows = document.querySelectorAll('#productsTable tbody tr');
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });

    // Exportar a Excel (simulado)
    function exportToExcel() {
        alert('Función de exportación habilitada. En una implementación real, esto descargaría un archivo Excel.');
    }

    // Inicializar tooltips
    document.addEventListener('DOMContentLoaded', function() {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>