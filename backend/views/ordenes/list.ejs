<%
    title = 'Gestión de ordenes';
    currentPage = 'ordenes';
%>

<main style="background-color: #f8f9fa; min-height: 100vh;">
    <div class="container-fluid px-4">
        <!-- Header -->
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 pb-3 mb-4 border-bottom">
            <div>
                <h1 class="h3 mb-1">
                    <i class="fas fa-shopping-cart me-2"></i>
                    Gestión de Órdenes
                </h1>
                <p class="text-muted mb-0">Administra todas las órdenes del sistema</p>
            </div>
            <div class="btn-toolbar mb-2 mb-md-0">
                <a href="/ordenes/create" class="btn btn-success">
                    <i class="fas fa-plus-circle me-2"></i>
                    Nueva Orden
                </a>
            </div>
        </div>

        <!-- Alertas -->
        <% if (typeof message !== 'undefined' && message) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                <%= message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Estadísticas -->
        <div class="row mb-4">
            <div class="col-xl-3 col-md-6">
                <div class="card bg-primary text-white mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <div class="fs-4 fw-bold"><%= ordenes.length %></div>
                                <div>Total Órdenes</div>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-shopping-cart fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card bg-warning text-dark mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <div class="fs-4 fw-bold">
                                    <%= ordenes.filter(o => o.estado_orden === 'pendiente').length %>
                                </div>
                                <div>Pendientes</div>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-clock fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card bg-success text-white mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <div class="fs-4 fw-bold">
                                    <%= ordenes.filter(o => o.estado_pago === 'pagado').length %>
                                </div>
                                <div>Pagadas</div>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card bg-info text-white mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <div class="fs-4 fw-bold">
                                    $<%= ordenes.reduce((sum, o) => sum + parseFloat(o.total || 0), 0).toLocaleString() %>
                                </div>
                                <div>Ingresos Totales</div>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-dollar-sign fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabla de Órdenes -->
        <div class="card shadow-sm">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>
                        Todas las Órdenes
                    </h5>
                    <div class="d-flex">
                        <input type="text" class="form-control form-control-sm me-2" placeholder="Buscar orden..." id="searchInput">
                        <select class="form-select form-select-sm me-2" style="width: auto;" id="filterEstado">
                            <option value="">Todos los estados</option>
                            <option value="pendiente">Pendiente</option>
                            <option value="procesando">Procesando</option>
                            <option value="completada">Completada</option>
                            <option value="cancelada">Cancelada</option>
                        </select>
                        <button class="btn btn-outline-secondary btn-sm" onclick="resetearFiltros()" title="Resetear filtros">
                            <i class="fas fa-refresh"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <% if (ordenes && ordenes.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="ordenesTable">
                            <thead class="table-light">
                                <tr>
                                    <th width="100">N° Orden</th>
                                    <th>Cliente</th>
                                    <th width="120">Tipo</th>
                                    <th width="120">Total</th>
                                    <th width="140">Estado Orden</th>
                                    <th width="140">Estado Pago</th>
                                    <th width="120">Fecha</th>
                                    <th width="100" class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% ordenes.forEach(orden => { %>
                                    <tr data-estado="<%= orden.estado_orden %>">
                                        <td>
                                            <strong class="text-primary">#<%= orden.numero_orden %></strong>
                                        </td>
                                        <td>
                                            <div class="fw-bold"><%= orden.cliente_nombre %> <%= orden.cliente_apellido %></div>
                                            <small class="text-muted"><%= orden.cliente_correo %></small>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                <%= orden.tipo === 'producto' ? 'Producto' : 'Servicio' %>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="fw-bold text-success">
                                                $<%= parseFloat(orden.total || 0).toLocaleString('es-ES', {minimumFractionDigits: 2, maximumFractionDigits: 2}) %>
                                            </span>
                                        </td>
                                        <td>
                                            <% const estadoOrdenClass = {
                                                'pendiente': 'bg-warning text-dark',
                                                'procesando': 'bg-info text-white', 
                                                'completada': 'bg-success text-white',
                                                'cancelada': 'bg-danger text-white'
                                            }[orden.estado_orden] || 'bg-secondary text-white'; %>
                                            <span class="badge badge-estado <%= estadoOrdenClass %>">
                                                <i class="fas fa-<%= orden.estado_orden === 'completada' ? 'check' : 'clock' %> me-1"></i>
                                                <%= orden.estado_orden %>
                                            </span>
                                        </td>
                                        <td>
                                            <% const estadoPagoClass = {
                                                'pendiente': 'bg-warning text-dark',
                                                'pagado': 'bg-success text-white',
                                                'fallido': 'bg-danger text-white'
                                            }[orden.estado_pago] || 'bg-secondary text-white'; %>
                                            <span class="badge badge-estado <%= estadoPagoClass %>">
                                                <i class="fas fa-<%= orden.estado_pago === 'pagado' ? 'check' : 'exclamation' %> me-1"></i>
                                                <%= orden.estado_pago %>
                                            </span>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <%= new Date(orden.created_at).toLocaleDateString('es-ES') %>
                                            </small>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm">
                                                <a href="/ordenes/<%= orden.id %>" 
                                                   class="btn btn-outline-primary" 
                                                   title="Ver detalles"
                                                   data-bs-toggle="tooltip">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/ordenes/edit/<%= orden.id %>" 
                                                   class="btn btn-outline-warning" 
                                                   title="Editar orden"
                                                   data-bs-toggle="tooltip">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">No hay órdenes registradas</h4>
                        <p class="text-muted mb-4">Comienza creando tu primera orden</p>
                        <a href="/ordenes/create" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus me-2"></i>
                            Crear Primera Orden
                        </a>
                    </div>
                <% } %>
            </div>
            <% if (ordenes && ordenes.length > 0) { %>
                <div class="card-footer bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            Mostrando <strong><%= ordenes.length %></strong> órdenes
                        </small>
                        <small class="text-muted">
                            Actualizado: <%= new Date().toLocaleString('es-ES') %>
                        </small>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // SOLUCIÓN DEFINITIVA - FILTRO FUNCIONANDO
    document.addEventListener('DOMContentLoaded', function() {
        console.log('🚀 Inicializando filtros...');
        
        // 1. FILTRO DE BÚSQUEDA
        const searchInput = document.getElementById('searchInput');
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const rows = document.querySelectorAll('#ordenesTable tbody tr');
                
                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    if (text.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        }

        // 2. FILTRO POR ESTADO - ESTA ES LA PARTE IMPORTANTE
        const filterEstado = document.getElementById('filterEstado');
        if (filterEstado) {
            filterEstado.addEventListener('change', function() {
                const filterValue = this.value;
                const rows = document.querySelectorAll('#ordenesTable tbody tr');
                
                console.log('🔘 Filtro cambiado a:', filterValue);
                
                rows.forEach(row => {
                    const rowEstado = row.getAttribute('data-estado');
                    
                    if (!filterValue) {
                        // Mostrar todas si no hay filtro
                        row.style.display = '';
                    } else if (rowEstado === filterValue) {
                        // Mostrar solo las que coinciden
                        row.style.display = '';
                    } else {
                        // Ocultar las que no coinciden
                        row.style.display = 'none';
                    }
                });
                
                console.log('✅ Filtro aplicado correctamente');
            });
        }

        // 3. TOOLTIPS
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });

        console.log('✅ Todos los filtros inicializados correctamente');
    });

    // Función para resetear filtros
    function resetearFiltros() {
        document.getElementById('searchInput').value = '';
        document.getElementById('filterEstado').value = '';
        
        const rows = document.querySelectorAll('#ordenesTable tbody tr');
        rows.forEach(row => {
            row.style.display = '';
        });
        
        console.log('🔄 Filtros reseteados');
    }

    // Auto-cerrar alertas
    setTimeout(() => {
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            const bsAlert = new bootstrap.Alert(alert);
            bsAlert.close();
        });
    }, 5000);
</script>